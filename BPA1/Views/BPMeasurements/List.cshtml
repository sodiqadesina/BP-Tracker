@model IEnumerable<BpMeasurement>
<div>
    <h2>All Measurements</h2>

    <div class="drow">
        <p> <a asp-controller="BPMeasurement" asp-action="Create">Add new BP measurement</a></p>
        <p> <a asp-controller="BPMeasurement" asp-action="Index">Information on BP measurements</a></p>
    </div>



    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>Reading</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Systolic / @item.Diastolic</td>

                <td>@item.DateOfMeasurement.ToShortDateString()</td>
               
                <td>
                    <a asp-controller="BpMeasurement" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="BpMeasurement" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </table>

</div>